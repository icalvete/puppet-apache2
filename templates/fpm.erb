<%
if @fpm_timeout
  idle_timeout = "-idle-timeout #{@fpm_timeout}"
end
-%>
<IfModule mod_fastcgi.c>
  AddHandler php5-fcgi .php
  Action php5-fcgi /php5-fcgi
  Alias /php5-fcgi /usr/lib/cgi-bin/php5-fcgi
  FastCgiExternalServer /usr/lib/cgi-bin/php5-fcgi -host <%= scope.lookupvar('apache2::fpm_host') -%>:<%= scope.lookupvar('apache2::fpm_port') -%> -pass-header Authorization <%= idle_timeout -%>
<% if @apache26 -%>

  <Directory />
    Require all granted
  </Directory>
<% end -%>
</IfModule>
