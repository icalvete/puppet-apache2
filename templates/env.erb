SetEnv APPLICATION_ENV <%= scope.lookupvar('apache2::env') %>
SetEnv RAILS_ENV <%= scope.lookupvar('apache2::env') %>
<% if defined?(@application_site) -%>
SetEnv APPLICATION_SITE <%= @application_site %>
<% end -%>
<% if defined?(@rails_secret_key_base) -%>
SetEnv RAILS_SECRET_KEY_BASE <%= @rails_secret_key_base %>
<% end -%>
<% if defined?(@rails_secret_key_base) -%>
SetEnv SECRET_KEY_BASE <%= @rails_secret_key_base %>
<% end -%>
<% if defined?(@rails_db_host) -%>
SetEnv RAILS_DB_HOST <%= @rails_db_host %>
<% end -%>
<% if defined?(@rails_db_name) -%>
SetEnv RAILS_DB_NAME <%= @rails_db_name %>
<% end -%>
<% if defined?(@rails_db_user) -%>
SetEnv RAILS_DB_USER <%= @rails_db_user %>
<% end -%>
<% if defined?(@rails_db_pass) -%>
SetEnv RAILS_DB_PASS <%= @rails_db_pass %>
<% end -%>
SetEnv INSTANCE_ID <%= scope.lookupvar('apache2::instance_id') %>
